extends layout

block content
  h1= title
  h3 #{title} table
  table(border="2")
    caption <h1>#{title}</h1>
    thead
      tr
        th(scope="col") No.
        th(scope="col") Title
        th(scope="col") Author
        th(scope="col") Publish Year
    tbody
      each book, index in books
        tr
          td #{index + 1}
          td #{book.title}
          td #{book.author}
          td #{book.year}
  br
  br
  hr
  br
  a(href="/users") See All Users
