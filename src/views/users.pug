extends layout

block content
  h1= title
  p #{title} table
  table(border="2")
    caption <h1>#{title}</h1>
    thead
      tr
        th(scope="col") No.
        th(scope="col") First, last Name
        th(scope="col") Email
    tbody
      each user, index in users
        tr
          td #{index + 1}
          td #{user.first_name + user.last_name}
          td #{user.email}
  br
  br
  hr
  br
  a(href="/books") See All Books
